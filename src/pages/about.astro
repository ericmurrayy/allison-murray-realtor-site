---
import BaseLayout from '../layouts/BaseLayout.astro';

const credentials = [
  "Licensed Massachusetts Real Estate Agent",
  "Member, Massachusetts Association of Realtors",
  "Member, National Association of Realtors",
  "Chinatti Realty Group"
];

const values = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>`,
    title: "Client-First Approach",
    description: "Your goals are my goals. I listen carefully to understand what matters most to you and tailor my approach accordingly."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>`,
    title: "Integrity Always",
    description: "I believe in honest, transparent communication. You'll always know where things stand and have the information you need to make informed decisions."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>`,
    title: "Excellence in Service",
    description: "From our first conversation to closing and beyond, I'm committed to providing exceptional service at every step."
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>`,
    title: "Local Expertise",
    description: "I live and work in the communities I serve. I know the neighborhoods, schools, and what makes each area special."
  }
];
---

<BaseLayout
  title="About Allison"
  description="Learn about Allison Murray, a trusted real estate agent serving Wellesley, Newton, Weston, and Greater Boston. Specializing in luxury and move-up homes."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__grid">
        <div class="hero__image">
          <div class="hero__image-wrapper">
            <img
              src="/allison-murray-headshot.jpg"
              alt="Allison Murray - Greater Boston Realtor"
              class="hero__img"
            />
          </div>
        </div>

        <div class="hero__content">
          <span class="hero__badge">About Allison</span>
          <h1>Your Partner in Greater Boston Real Estate</h1>
          <p class="hero__subtitle">
            As a Greater Boston & MetroWest Move-Up and Luxury Home Specialist, I bring
            deep local knowledge and a genuine passion for helping families find their perfect home.
          </p>
          <p>
            Real estate is more than a transactionâ€”it's about helping people take the next step
            in their lives. Whether you're selling your family home of 20 years or searching for
            the perfect place to raise your children, I understand the significance of this decision.
          </p>
          <p>
            My approach is simple: listen carefully, provide expert guidance, and work tirelessly
            to achieve the best possible outcome for my clients.
          </p>

          <div class="hero__credentials">
            {credentials.map(credential => (
              <span class="hero__credential">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {credential}
              </span>
            ))}
          </div>

          <div class="hero__ctas">
            <a href="/contact" class="btn btn--primary">Get In Touch</a>
            <a href="/sell" class="btn btn--secondary">Sell Your Home</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="section section--light values">
    <div class="container">
      <div class="section__header">
        <h2>What I Stand For</h2>
        <p class="section__subtitle">
          The principles that guide every client relationship
        </p>
      </div>

      <div class="values__grid">
        {values.map(value => (
          <div class="values__card">
            <div class="values__icon" set:html={value.icon} />
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="section story">
    <div class="container container--narrow">
      <h2 class="text-center">Why I Love What I Do</h2>

      <div class="story__content">
        <p>
          I got into real estate because I genuinely love helping people. There's nothing quite like
          handing over the keys to a family's new home or seeing the relief and excitement when a
          seller accepts an offer that exceeds their expectations.
        </p>
        <p>
          Having lived in the Greater Boston area for years, I've developed deep roots in these
          communities. I know which neighborhoods are walkable to the best coffee shops, which
          streets have the friendliest neighbors, and which hidden gems might be the perfect fit
          for your family.
        </p>
        <p>
          At Chinatti Realty Group, I'm surrounded by experienced professionals who share my
          commitment to excellence. Together, we bring the resources and expertise of a top
          brokerage with the personalized attention of a boutique firm.
        </p>
        <p>
          Whether you're buying or selling, I'd love the opportunity to learn about your goals
          and show you how I can help you achieve them.
        </p>
      </div>

      <div class="story__cta">
        <a href="/contact" class="btn btn--primary btn--large">Let's Connect</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--dark cta">
    <div class="container">
      <div class="cta__content">
        <h2>Ready to Work Together?</h2>
        <p class="cta__text">
          Whether you're thinking of selling or searching for your next home,
          I'd love to hear from you.
        </p>
        <div class="cta__buttons">
          <a href="/sell" class="btn btn--primary btn--large">Get Your Home Valuation</a>
          <a href="tel:9788887649" class="btn btn--white">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Call (978) 888-7649
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--spacing-3xl) 0;
  }

  .hero__grid {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: var(--spacing-3xl);
    align-items: start;
  }

  .hero__image-wrapper {
    position: sticky;
    top: calc(80px + var(--spacing-lg));
    aspect-ratio: 3/4;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .hero__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .hero__badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: rgba(201, 162, 39, 0.15);
    color: var(--color-accent-dark);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: var(--radius-xl);
    margin-bottom: var(--spacing-md);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-gray);
    margin-bottom: var(--spacing-lg);
  }

  .hero__content p {
    color: var(--color-dark-gray);
    line-height: 1.8;
  }

  .hero__credentials {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin: var(--spacing-xl) 0;
  }

  .hero__credential {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-gray);
    background-color: var(--color-off-white);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-xl);
  }

  .hero__credential svg {
    color: var(--color-accent);
  }

  .hero__ctas {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  /* Values Section */
  .values__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
  }

  .values__card {
    text-align: center;
    padding: var(--spacing-lg);
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .values__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background-color: var(--color-accent);
    color: var(--color-white);
    border-radius: 50%;
    margin-bottom: var(--spacing-md);
  }

  .values__card h3 {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-sm);
  }

  .values__card p {
    color: var(--color-gray);
    font-size: 0.9375rem;
    margin-bottom: 0;
  }

  /* Story Section */
  .story__content {
    margin: var(--spacing-xl) 0;
  }

  .story__content p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-dark-gray);
  }

  .story__cta {
    text-align: center;
  }

  /* CTA Section */
  .cta__content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta__text {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--spacing-xl);
  }

  .cta__buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  /* Responsive */
  @media (max-width: 1000px) {
    .hero__grid {
      grid-template-columns: 1fr;
    }

    .hero__image {
      max-width: 350px;
      margin: 0 auto;
    }

    .hero__image-wrapper {
      position: static;
    }

    .values__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .values__grid {
      grid-template-columns: 1fr;
    }

    .cta__buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
