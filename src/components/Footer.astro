---
const currentYear = new Date().getFullYear();

const serviceAreas = [
  'Wellesley',
  'Weston',
  'Newton',
  'Lexington',
  'Needham',
  'Natick',
  'Waltham',
];
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <!-- Brand Column -->
      <div class="footer__brand">
        <div class="footer__logo">
          <span class="footer__name">Allison Murray</span>
          <span class="footer__title">Realtor</span>
        </div>
        <p class="footer__tagline">
          Your trusted partner for buying and selling homes in Greater Boston's most desirable communities.
        </p>
        <div class="footer__brokerage">
          <span>Chinatti Realty Group</span>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer__section">
        <h4 class="footer__heading">Quick Links</h4>
        <ul class="footer__links">
          <li><a href="/sell">Sell Your Home</a></li>
          <li><a href="/buy">Buy a Home</a></li>
          <li><a href="/listings">Listings</a></li>
          <li><a href="/areas">Areas We Serve</a></li>
          <li><a href="/reviews">Client Reviews</a></li>
          <li><a href="/about">About Allison</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <!-- Service Areas -->
      <div class="footer__section">
        <h4 class="footer__heading">Service Areas</h4>
        <ul class="footer__links footer__links--areas">
          {serviceAreas.map(area => (
            <li><a href={`/areas/${area.toLowerCase()}`}>{area}, MA</a></li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__section">
        <h4 class="footer__heading">Get In Touch</h4>
        <div class="footer__contact">
          <a href="tel:9788887649" class="footer__contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
